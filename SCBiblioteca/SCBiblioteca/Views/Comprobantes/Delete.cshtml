@model SCBiblioteca.Models.Comprobante
@{
    String sesion = (String)(System.Web.HttpContext.Current.Session["UserSesion"]);
}
@if (@System.Web.HttpContext.Current.Session["UserSesion"] != null && sesion.Equals("Administrador"))
{
    ViewBag.Title = "Delete";

    <div class="container my-5" style="padding:16px;">
        <h2>Delete</h2>
        <div class="alert alert-danger" role="alert">
            <h3><strong>¿Está seguro que desea eliminar el Comrobante?</strong></h3>
            <p><strong>Nota: Eliminar solo comprobantes inactivos</strong></p>
        </div>
        <div>
            <h4>Comprobante</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Comprobante1)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Comprobante1)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Activo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Activo)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FechaCreacion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaCreacion)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.FechaVencimiento)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.FechaVencimiento)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Usuario.NombreCompleto)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Usuario.NombreCompleto)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    @if (@Html.DisplayFor(model => model.Activo).ToString() == "0")
                    {
                        <input type="submit" value="Eliminar" class="btn btn-danger" />
                    }
                    |
                    @Html.ActionLink("Regresar a la lista", "Index")
                </div>
            }
        </div>
    </div>
}
else
{
    {
        ViewBag.Title = "NotFound";
    }
    @RenderPage("~/Views/Home/NotFound.cshtml");
}
<script src="~/Scripts/jquery-3.5.1.min.js"></script>